<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">

    <!-- Remplacez 'your_logo' par le nom de votre fichier de logo -->

    <ImageView
        android:id="@+id/logo"
        android:layout_height="1024px"
        android:layout_width="1024px"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/test" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="10pt"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="This app is just a helper function.\nIt was generated with the help of ChatGPT4"
        android:textColor="@android:color/white" />
</RelativeLayout>